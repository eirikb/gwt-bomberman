<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:lobby="urn:import:no.eirikb.bomberman.client.ui.lobby">
    <g:HTMLPanel width="640px">
        Info: <g:Label ui:field="infoLabel" />
        <g:DecoratedTabPanel width="640px" ui:field="tabPanel" animationEnabled="true">
            <g:Tab text="Games">
                <lobby:GameListPanel ui:field="gameListPanel" />
            </g:Tab>
            <g:Tab text="Create game">
                <lobby:GameCreatePanel ui:field="gameCreatePanel" />
            </g:Tab>
        </g:DecoratedTabPanel>
    </g:HTMLPanel>
</ui:UiBinder>